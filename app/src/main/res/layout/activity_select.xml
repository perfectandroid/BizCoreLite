            android:layout_height="wrap_content"
            android:id="@+id/layt_otp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:visibility="gone"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtv_enterotp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#F9F688"
                    android:textSize="22dp"
                    android:text="Enter the 6 digit OTP"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4.5">

                    <EditText
                        android:id="@+id/et_otp1"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight=".75"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:nextFocusForward="@+id/et_otp2"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:background="@drawable/edtbg"
                        android:textColor="#fff"
                        android:textColorHint="#fff">
                        <requestFocus />
                    </EditText>

                    <EditText
                        android:id="@+id/et_otp2"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight=".75"
                        android:nextFocusForward="@+id/et_otp3"
                        android:gravity="center"
                        android:inputType="number"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:background="@drawable/edtbg"
                        android:maxLength="1"
                        android:textColor="#fff"
                        android:textColorHint="#fff">
                        <requestFocus />
                    </EditText>

                    <EditText
                        android:id="@+id/et_otp3"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight=".75"
                        android:nextFocusForward="@+id/et_otp4"
                        android:gravity="center"
                        android:inputType="number"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:background="@drawable/edtbg"
                        android:maxLength="1"
                        android:textColor="#fff"
                        android:textColorHint="#fff">
                        <requestFocus />
                    </EditText>

                    <EditText
                        android:id="@+id/et_otp4"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight=".75"
                        android:nextFocusForward="@+id/et_otp5"
                        android:gravity="center"
                        android:inputType="number"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:background="@drawable/edtbg"
                        android:maxLength="1"
                        android:textColor="#fff"
                        android:textColorHint="#fff">
                        <requestFocus />
                    </EditText>

                    <EditText
                        android:id="@+id/et_otp5"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight=".75"
                        android:nextFocusForward="@+id/et_otp6"
                        android:gravity="center"
                        android:inputType="number"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:background="@drawable/edtbg"
                        android:maxLength="1"
                        android:textColor="#fff"
                        android:textColorHint="#fff">
                        <requestFocus />
                    </EditText>

                    <EditText
                        android:id="@+id/et_otp6"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight=".75"
                        android:gravity="center"
                        android:inputType="number"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:background="@drawable/edtbg"
                        android:maxLength="1"
                        android:textColor="#fff"
                        android:textColorHint="#fff">
                        <requestFocus />
                    </EditText>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.6"
            android:gravity="center"
            android:background="@drawable/deposit_top"
