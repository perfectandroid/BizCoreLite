                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:layout_marginTop="2dip"
                            android:padding="5dp"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:text="A/C No : "/>

