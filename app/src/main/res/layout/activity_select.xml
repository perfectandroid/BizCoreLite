    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rl_main">
<!--    android:background="@drawable/greybg2"-->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:background="@drawable/toolbarbg"
        android:visibility="visible"
        android:layout_height="?android:attr/actionBarSize">

        <ImageView
            android:id="@+id/imback"
            android:src="@drawable/backimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_weight="4"/>
        <TextView
            android:id="@+id/tvheader"
            android:text="Account verification"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_weight="4"/>


    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/applogodark"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selection_card_bg"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/layt_selctacc1"
                android:padding="10dp"
                android:background="@drawable/etbgsqaure"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtv_selecacc1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dip"
                    android:text="Select Account"
                    android:layout_marginLeft="5dip"
                    android:layout_gravity="left"
                    android:padding="3dip"
                    android:textColor="@color/white" />


                <ImageView
                    android:id="@+id/imgv_down1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end"
                    android:background="@drawable/ic_down" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="15dp"
                    android:textSize="22dp"
                    android:text="Account Number : "/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:focusable="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_acc_first1"
                        style="@style/white_field"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1.2"
                        android:imeOptions="actionNext"
                        android:maxLength="3"
                        android:nextFocusForward="@id/edt_acc_second"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp" />

                    <EditText
                        android:id="@+id/edt_acc_second1"
                        style="@style/white_field"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginStart="1dp"
                        android:layout_weight="1.2"
                        android:baselineAligned="false"
                        android:imeOptions="actionNext"
                        android:maxLength="3"
                        android:nextFocusForward="@id/edt_acc_third"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp" />

                    <EditText
                        android:id="@+id/edt_acc_third1"
                        style="@style/white_field"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:imeOptions="actionDone"
                        android:maxLength="6"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp" />



                </LinearLayout>
                <Button
                    android:id="@+id/btn_send1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send OTP"
                    android:textSize="18dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/btncancelbg"
                    android:layout_above="@+id/btncancel"
                    android:padding="10dp"/>

            </LinearLayout>
            <LinearLayout
