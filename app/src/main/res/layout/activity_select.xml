                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text=""
                        android:textColorHint="@color/black"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:hint="Name / Mobile Number"/>



                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3.5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:layout_marginTop="2dip"
                        android:padding="5dp"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:text="A/C No"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:layout_weight="1"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1.2"
                        android:focusable="true"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/etbgwhitesquare"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edt_acc_first"
                            style="@style/white_field"
                            android:imeOptions="actionNext"
                            android:textColor="@color/black"
                            android:maxLength="3"
                            android:nextFocusForward="@id/edt_acc_second"
                            android:visibility="visible"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginStart="1dp"
                        android:layout_weight="1.2"
                        android:background="@drawable/etbgwhitesquare"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/edt_acc_second"
                            style="@style/white_field"
                            android:imeOptions="actionNext"
                            android:textColor="@color/black"
                            android:maxLength="3"
                            android:nextFocusForward="@id/edt_acc_third"
                            android:visibility="visible" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/etbgwhitesquare"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/edt_acc_third"
                            style="@style/white_field"
                            android:imeOptions="actionDone"
                            android:textColor="@color/black"
                            android:maxLength="6"
                            />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:id="@+id/lnrok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/etbgwhitesquare"
                    android:layout_marginRight="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:text="SEARCH"/>

                </LinearLayout>


            </RelativeLayout>








        </LinearLayout>

