<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/layt_otp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/newbgback"
        android:visibility="visible"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_otp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Enter The 6 Digit OTP"
                android:textColor="#fff"
                android:textSize="23sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:weightSum="4.5">

                <EditText
                    android:id="@+id/et_otp1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight=".75"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:nextFocusForward="@+id/et_otp2"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:background="@drawable/edtbg"
                    android:textColor="#fff"
                    android:textColorHint="#fff">
                    <requestFocus />
                </EditText>

                <EditText
                    android:id="@+id/et_otp2"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight=".75"
                    android:nextFocusForward="@+id/et_otp3"
                    android:gravity="center"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:background="@drawable/edtbg"
                    android:maxLength="1"
                    android:textColor="#fff"
                    android:textColorHint="#fff">
                    <requestFocus />
                </EditText>

                <EditText
                    android:id="@+id/et_otp3"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight=".75"
                    android:nextFocusForward="@+id/et_otp4"
                    android:gravity="center"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:background="@drawable/edtbg"
                    android:maxLength="1"
                    android:textColor="#fff"
                    android:textColorHint="#fff">
                    <requestFocus />
                </EditText>

                <EditText
                    android:id="@+id/et_otp4"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight=".75"
                    android:nextFocusForward="@+id/et_otp5"
                    android:gravity="center"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:background="@drawable/edtbg"
                    android:maxLength="1"
                    android:textColor="#fff"
                    android:textColorHint="#fff">
                    <requestFocus />
                </EditText>

                <EditText
                    android:id="@+id/et_otp5"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight=".75"
                    android:nextFocusForward="@+id/et_otp6"
                    android:gravity="center"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:background="@drawable/edtbg"
                    android:maxLength="1"
                    android:textColor="#fff"
                    android:textColorHint="#fff">
                    <requestFocus />
                </EditText>

                <EditText
                    android:id="@+id/et_otp6"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight=".75"
                    android:gravity="center"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:background="@drawable/edtbg"
                    android:maxLength="1"
                    android:textColor="#fff"
                    android:textColorHint="#fff">
                    <requestFocus />
                </EditText>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>