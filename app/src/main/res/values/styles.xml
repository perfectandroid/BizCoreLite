<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextAppearance">@style/TextFloatingLabelApperarance</item>
    </style>

    <style name="TextFloatingLabelApperarance" parent="TextAppearance.Design.Hint">
        <item name="android:textColorHint">#fff</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="Progress" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/color_activity_transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="CustomAlertDialogStyle">MyDialogTheme
        <item name="android:bottomBright">@color/color_activity_transparent</item>
        <item name="android:bottomDark">@color/color_activity_transparent</item>
        <item name="android:bottomMedium">@color/color_activity_transparent</item>
        <item name="android:centerBright">@color/color_activity_transparent</item>
        <item name="android:centerDark">@color/color_activity_transparent</item>
        <item name="android:centerMedium">@color/color_activity_transparent</item>
        <item name="android:fullBright">@color/color_activity_transparent</item>
        <item name="android:fullDark">@color/color_activity_transparent</item>
        <item name="android:topBright">@color/color_activity_transparent</item>
        <item name="android:topDark">@color/color_activity_transparent</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="white_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/etbgsqaure</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
    </style>

    <style name="text_filed">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/square_shape</item>
        <item name="android:inputType">textShortMessage|textMultiLine</item>


    </style>

    <style name="spinner_style">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:spinnerMode">dialog</item>
        <item name="android:entries">@array/items</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:popupBackground">#ffffff</item>
        <item name="android:drawableRight">@drawable/spinner_arrow</item>

    </style>

    <style name="spinner_style11">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:spinnerMode">dialog</item>
        <item name="android:entries">@array/items</item>
        <item name="android:background">@drawable/rounded_corner11</item>
        <item name="android:popupBackground">#ffffff</item>
        <item name="android:drawableRight">@drawable/spinner_arrow1</item>

    </style>


    <style name="blue_button">
        <item name="android:background">@drawable/blue_rounded_rect</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
</resources>
